    echo "ğŸ“Š ESTADO DEL SISTEMA:" | lolcat 2>/dev/null || echo "=== ESTADO DEL SISTEMA ==="
    
    # CPU usage - mÃ©todo seguro
    cpu_usage=$(grep 'cpu ' /proc/stat 2>/dev/null | awk '{usage=($2+$4)*100/($2+$4+$5)} END {printf "%.1f%%", usage}' || echo "N/A")
