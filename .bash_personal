# ===== PROMPT AVANZADO =====
# FunciÃ³n para mostrar branch de git en el prompt con pulpo ğŸ™
parse_git_branch() {
    git branch 2> /dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/ ğŸ™ \1/'
}

# FunciÃ³n para emoji aleatorio que cambia en cada lÃ­nea
function random_emoji() {
    emojis=("ğŸš€" "ğŸ§" "ğŸ’»" "ğŸ”¥" "âš¡" "ğŸ¯" "ğŸ³" "ğŸ”§" "ğŸ¨" "ğŸ“Š" "ğŸ¦Š" "ğŸ®" "ğŸŒŸ" "ğŸ’«")
    echo "${emojis[$RANDOM % ${#emojis[@]}]}"
}

# Prompt principal de DOS LÃNEAS con colores de Byobu y pulpo para Git
PS1='\[\033[38;5;214m\]â”Œâ”€[\[\033[38;5;69m\]\u\[\033[38;5;214m\]@\[\033[38;5;167m\]\h\[\033[38;5;214m\]]-[\[\033[38;5;71m\]\W\[\033[38;5;214m\]]\[\033[01;31m\]$(parse_git_branch)\[\033[0m\]\n\[\033[38;5;214m\]â””â”€$(random_emoji)\[\033[00m\] '

